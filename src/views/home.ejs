<link rel="stylesheet" href="./css/index.css">
<script type="module" src="./js/flashtext.js"></script>

<main class="landing-page">
  <div class="container">
    <header class="hero">
      <h1>Auth Portal</h1>
      <p class="subtitle">Secure Authentication System</p>
      <em class="subtitle">All data is stored in your browser's cookies.</em>
      <p class="subtitle">No server-side storage. <br> All sessions are managed client-side.</p>
    </header>

    <% if (error) { %>
      <div class="error-message" id="flash-message">
        <%= error %>
      </div>
    <% } %>

    <div class="auth-buttons">
      <a href="/login" class="btn btn-login">Login</a>
      <a href="/register" class="btn btn-register">Register</a>
    </div>
  </div>
</main>